{
  "solr.host": "http://localhost:8983/solr/",
  "OAIHavest": {
    "url": "http://aleph.nkp.cz/OAI"
  },
  "OAI": {
    "rowsPerPage": 100,
    "repositoryName": "Seznam děl nedostupných na trhu",
    "adminEmail": "sdnnt@nkp.cz"
  },
  "textsDir": "texts",
  "resetPwdExpirationDays": 3,
  "search": {
    "fromYear": 1911,
    "yearsBK": 14,
    "yearsSE": 10
  },

  "session": {
    "maxinactiveinterval": 1200
  },

  "workflow" :{
    "escalation" :{
      "VNZ" : {
        "value": 3,
        "unit": "day"
      },
      "VNL" : {
        "value": 3,
        "unit": "day"
      },
      "NZN" : {
        "value": 3,
        "unit": "day"
      }
    },
    "periods": {
        "debug": true,
        "debug_nzn_0" : {
          "value": 6
        },
        "period_nzn_0" : {
          "value": 6
        }
    }
  },

  "jobs": {
    "zadost_po_minute": {
      "type": "workflow",
      "cron": "0 * * * * ?"
    },


    "notifikace_den": {
      "type": "notifications",
      "interval": "den",
      "cron": "0 0 0 * * ?"
    },
    "notifikace_tyden": {
      "type": "notifications",
      "interval": "tyden",
      "cron": "0 0 2 ? * MON"
    },
    "notifikace_mesic": {
      "type": "notifications",
      "interval": "mesic",
      "cron": "0 15 22 ? * 6L"
    },


    "test": {
      "type": "test",
      "cron": "0 2 0 ? * MON"
    }
  }

}


