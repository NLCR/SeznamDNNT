{
  "solr.host": "http://localhost:8983/solr/",
  "OAIHavest": {
    "url": "http://aleph.nkp.cz/OAI"
  },
  "OAI": {
    "rowsPerPage": 100,
    "repositoryName": "Seznam děl nedostupných na trhu",
    "adminEmail": "sdnnt@nkp.cz"
  },
  "textsDir": "texts",
  "resetPwdExpirationDays": 3,
  "search": {
    "fromYear": 1911,
    "yearsBK": 14,
    "yearsSE": 10
  },

  "session": {
    "timeout": 30
  },

  "jobs": {
    "zadost": {
      "type": "zadost",
      "cron": "0 0 0 * * ?"
    },
    "notifikace_den": {
      "type": "notifications",
      "interval": "den",
      "cron": "0 0 0 * * ?"
    },
    "notifikace_tyden": {
      "type": "notifications",
      "interval": "tyden",
      "cron": "0 0 2 ? * MON"
    },
    "notifikace_mesic": {
      "type": "notifications",
      "interval": "mesic",
      "cron": "0 15 22 ? * 6L"
    },
    "test": {
      "type": "test",
      "cron": "0 2 0 ? * MON"
    }
  }

}


